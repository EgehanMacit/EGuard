<ScanPCScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10

        Label:
            text: "PC Scan Panel"
            font_size: 24

        ProgressBar:
            id: progress_bar
            max: 100
            value: 0
            size_hint_y: None
            height: '20dp'

        BoxLayout:
            size_hint_y: None
            height: '40dp'
            spacing: 10

            Button:
                text: "Start Scan"
                on_press: root.start_scan()

            Button:
                text: "Stop"
                on_press: root.stop_scan()

            Button:
                text: "Return to Menu"
                on_press: root.manager.current = 'scan_menu'

        Label:
            id: result_label
            text: "Status will be shown here"
            size_hint_y: None
            height: '30dp'
